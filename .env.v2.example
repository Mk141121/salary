# ========================================
# HRM-LITE v2 - Environment Variables
# ========================================
# Copy this file to .env.v2 and update values
# ========================================

# ========================================
# Database - PostgreSQL
# ========================================
POSTGRES_USER=hrmlite
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=hrm_lite
DB_PORT=5432

# ========================================
# Redis Cache
# ========================================
REDIS_PORT=6379

# ========================================
# Backend API
# ========================================
API_PORT=3001
NODE_ENV=production
LOG_LEVEL=info

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:80,https://yourdomain.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ========================================
# Frontend Web
# ========================================
WEB_PORT=80
WEB_SSL_PORT=443
VITE_API_URL=/api

# ========================================
# Tools (optional)
# ========================================
ADMINER_PORT=8080
