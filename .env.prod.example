# Production environment variables
# Copy this file to .env.prod and fill in the values

# ============ REQUIRED ============
POSTGRES_USER=hrm_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=hrm_lite

JWT_SECRET=CHANGE_ME_LONG_RANDOM_STRING_MIN_32_CHARS

# ============ OPTIONAL ============
# JWT expiration (default: 7d)
JWT_EXPIRES_IN=7d

# Redis (optional, for caching)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# OpenAI API Key (optional, for future AI features)
OPENAI_API_KEY=

# Public ports
PUBLIC_PORT=80
PUBLIC_SSL_PORT=443

# API URL for frontend (usually /api if same domain)
VITE_API_URL=/api
